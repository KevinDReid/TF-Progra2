<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>

  <body>
    <%- include('./partials/header.ejs')%>

    <main>
      <section class="center main-content">
        <% for( let i = 0; i < posts.length; i++ ) { %>
        <article class="post">
          <div class="info-usuario">
            <img class="userImg" src="imagen del user" alt="" />
            <h4>
              <a class="fix-link" href="/users/id/<%= posts[i].id_usuario %>"> aca va el nombre de usuario
              </a>
            </h4>
          </div>
          <div class="post-body">
            <a href="/posts/detail/id/<%= posts[i].id_post %>">
              <img src="<%= posts[i].name_img %>" alt="" />
            </a>
          </div>
          <ul class="post-reacciones">
            <li class="likesAndStuff">
              <i class="fa-regular fa-heart"> </i>
            </li>
            <li class="likesAndStuff">
              <!-- <p class="likesText"> likes</p> -->
            </li>
            <li class="likesAndStuff">
              <i class="fa-regular fa-comment"></i>
            </li>
          </ul>
          <div class="descripcion">
            <p><%=posts[i].descripcion%></p>
          </div>
          <div class="post-comentarios">
            <h4>Comentarios</h4>
            <ul>
              <% for( let a = 0; a < 2; a++ ) { %>

              <li>
                <a class="indexUsername" href="/users/id/<%= posts[i].id_usuario %>"
                  >
                  aca va el nombre de usuario
                </a>
                <span></span>
              </li>
              <% } %>
              <li>
                <a href="/posts/detail/id/<%= posts[i].id_post %>">Ver m√°s...</a>
              </li>
            </ul>
          </div>
        </article>

        <% } %>
      </section>
    </main>

    <%- include('./partials/footer.ejs')%>
  </body>
</html>
