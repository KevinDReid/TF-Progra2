<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>

  <body>
    <%- include('./partials/header.ejs')%>

    <main>
      <div class="user-detail container">
        <section class="top main-content">
          <img class="profile" src="<%= user[0].foto %> " alt="" />
          <div class="info-usuario">
            <p><%= user[0].username %></p>
            <a class="follow" href="">seguir</a>
            <ul class="meta">
              <li><%=user[0].postNumber%> post</li>
              <li><%=user[0].followers%> seguidores</li>
              <li><%=user[0].following%> seguidos</li>
            </ul>
          </div>
        </section>
        <section class="bottom">
          <% for( let i = 0; i < user[0].postNumber; i++ ) { %>

          <article class="post">
            <a href="/posts/detail/id/<%=img[i].postId%>">
              <img src="<%= img[i].postImg %>" alt="" />
            </a>
          </article>
          <% } %>
        </section>
      </div>
    </main>

    <%- include('./partials/footer.ejs')%>
  </body>
</html>
